:_start
	LOADR32 R12 @HEAP           ; Setup HEAP pointer
	LOADUI R15 $ELF_end         ; Setup Stack pointer
	COPY R14 R15                ; Protect esp

	;; Perform the main loop
	CALLI R15 @FUNCTION_main

	;; Exit to kernel
	HALT                        ; Simply halt for now

	;; Our default heap pointer
:HEAP
	'00080000'